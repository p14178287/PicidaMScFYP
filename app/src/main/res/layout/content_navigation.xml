<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentNav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shingiraimarikasi.PicidaMScFYP.controller.ui.NavigationActivity"
    tools:showIn="@layout/app_bar_navigation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/yoga">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CheckUp!"
            android:id="@+id/mainTitleTextView"
            android:textStyle="bold"
            android:textColor="@color/material_grey_850"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="200dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Track Health"
                android:id="@+id/healthButton"
                android:textSize="20dp"
                android:background="@drawable/rounded_button"
                android:layout_above="@+id/appointmentsButton"
                android:textColor="@color/colorTextIcons"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="40dp">
            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Appointments"
                android:id="@+id/appointmentsButton"
                android:layout_marginBottom="33dp"
                android:textSize="20dp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/colorTextIcons"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
